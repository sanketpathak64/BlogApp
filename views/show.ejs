<%- include ('partials/header'); -%>

<div class="ui main ext container segment">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached">
        <div class="items">
                <img class="ui centred rounded image"src="<%=blog.image%>">
                <div class="content">
                    <span><%= blog.created.toDateString()%></span>
                </div>
                <div class="description">
                         <p><%-blog.body%></p>  <!--take blog.body as html -->
                </div>
                <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">Edit Blog</a>
                <form id="del" action="/blogs/<%=blog._id%>?_method=DELETE"method="post">
                        <button class="ui red basic button">Delete</button>
                </form>
        </div>
    </div>
    
   
</div>

<%- include ('partials/footer'); -%>