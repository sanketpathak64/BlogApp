<%- include ('partials/header'); -%>

<div class="ui main ext container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>"required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="blog post goes here" required><%=blog.body%></textarea>
        </div>
        
        
        
        <input class="ui violet inverted button" type="submit">

    </form>
</div>

<%- include ('partials/footer'); -%>